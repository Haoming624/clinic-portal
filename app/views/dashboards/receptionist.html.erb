<div class="row">
  <!-- Filters Column -->
  <div class="col-md-3">
    <h5>Filters</h5>
    <%= form_with url: receptionist_dashboard_path, method: :get, local: true do |f| %>
      <div class="mb-3">
        <%= label_tag :query, "Search by Name" %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter patient name" %>
      </div>

      <div class="mb-3">
        <%= label_tag :dob_from, "Date of Birth From" %>
        <%= date_field_tag :dob_from, params[:dob_from], class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag :dob_to, "Date of Birth To" %>
        <%= date_field_tag :dob_to, params[:dob_to], class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag :status, "Status" %>
        <%= select_tag :status, options_for_select([["Any", ""]] + Patient.statuses.keys.map { |s| [s.titleize, s] }, params[:status]), class: "form-select" %>
      </div>

      <div class="d-grid gap-2">
        <%= submit_tag "Apply Filters", class: "btn btn-primary" %>
        <%= link_to "Clear Filters", receptionist_dashboard_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>

  <!-- Table Column -->
  <div class="col-md-9">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Patient List</h3>
      <%= link_to "Add New Patient", new_patient_path, class: "btn btn-success" %>
    </div>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Date of Birth</th>
          <th>Status</th>
          <th>Notes</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td><%= patient.id %></td>
            <td><%= patient.name %></td>
            <td><%= patient.dob.strftime('%Y-%m-%d') if patient.dob %></td>
            <td><%= patient.status&.titleize %></td>
            <td><%= patient.notes %></td>
            <td>
              <%= link_to 'View', patient_path(patient), class: "btn btn-sm btn-info me-1" %>
              <%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-sm btn-warning me-1" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
