<% flash.each do |key, message| %>
  <% alert_class = case key.to_sym
    when :notice then "success"
    when :alert then "danger"
    when :warning then "warning"
    else "info"
  end %>

  <% icon_class = case alert_class
    when "success" then "bi-check-circle-fill"
    when "danger" then "bi-exclamation-triangle-fill"
    when "warning" then "bi-exclamation-circle-fill"
    else "bi-info-circle-fill"
  end %>

  <div class="alert alert-<%= alert_class %> alert-dismissible fade show d-flex align-items-center" role="alert">
    <i class="bi <%= icon_class %> flex-shrink-0 me-2" style="font-size: 1.5rem;"></i>
    <div><%= message.html_safe %></div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>