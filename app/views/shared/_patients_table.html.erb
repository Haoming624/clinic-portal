<div class="row">
  <!-- Filters Column -->
  <div class="col-md-3 align-self-start mt-5">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light fw-semibold">
        Filters
      </div>
      <div class="card-body">
        <%= form_with url: dashboard_path, method: :get, local: true do %>
          <div class="mb-3">
            <%= label_tag :query, "Search by Name", class: "form-label fw-semibold" %>
            <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter patient name" %>
          </div>

          <div class="mb-3">
            <%= label_tag :dob_from, "Year of Birth From", class: "form-label fw-semibold" %>
            <%= select_tag :dob_from,
                  options_for_select([["", ""]] + (1900..Date.today.year).to_a.reverse.map { |y| [y, y] }, params[:dob_from]),
                  class: "form-select" %>
          </div>

          <div class="mb-3">
            <%= label_tag :dob_to, "Year of Birth To", class: "form-label fw-semibold" %>
            <%= select_tag :dob_to,
                  options_for_select([["", ""]] + (1900..Date.today.year).to_a.reverse.map { |y| [y, y] }, params[:dob_to]),
                  class: "form-select" %>
          </div>

          <div class="mb-3">
            <%= label_tag :status, "Status", class: "form-label fw-semibold" %>
            <%= select_tag :status, options_for_select([["Any", ""]] + Patient.statuses.keys.map { |s| [s.titleize, s] }, params[:status]), class: "form-select" %>
          </div>

          <div class="d-grid gap-2">
            <%= submit_tag "Apply Filters", class: "btn btn-primary" %>
            <%= link_to "Clear Filters", dashboard_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Table Column -->
  <div class="col-md-9">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Patient List</h3>
      <% if receptionist? %>
        <%= link_to "Add New Patient", new_patient_path, class: "btn btn-success" %>
      <% end %>
    </div>

    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col" style="width: 5%;">ID</th>
          <th scope="col" style="width: 20%;">Name</th>
          <th scope="col" style="width: 15%;">Date of Birth</th>
          <th scope="col" style="width: 15%;">Status</th>
          <th scope="col" style="width: 30%;">Notes</th>
          <th scope="col" style="width: 15%;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% patients.each do |patient| %>
          <tr>
            <td><%= patient.id %></td>
            <td><%= patient.name %></td>
            <td><%= patient.dob.strftime('%Y-%m-%d') if patient.dob %></td>
            <td><%= patient.status&.titleize %></td>
            <td><%= patient.notes %></td>
            <td>
              <%= link_to patient_path(patient), class: "btn btn-sm btn-info me-1", title: "View" do %>
                <i class="bi bi-eye"></i>
              <% end %>

              <% if receptionist? %>
                <%= link_to edit_patient_path(patient), class: "btn btn-sm btn-warning me-1", title: "Edit" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate patients %>
  </div>
</div>
